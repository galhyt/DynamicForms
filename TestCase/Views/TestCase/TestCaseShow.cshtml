@model TestCase.Models.TestCaseShowModel
@using DynamicForms
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>Test Case Form</title>
    <style>
        .Editor-Name {
            float:right;
        }

        .DynamicFormContainer {
            margin: 0 auto;
        }

        .DynamicFormContainer:before {
            display: block;
            content: "";
            clear: both;
            margin-top: 5em;
        }

    </style>
</head>
<body>
    @using (Html.BeginForm("TestCaseShow", "TestCase", FormMethod.Post, new { @id = "form" }))
    {
        @Html.HiddenFor(m=>m.id)
        <div>
            <div>
                <h1 style="text-align:center;"><strong>@Model.FormTitle</strong></h1>
                    @Html.HiddenFor(m => m.FormTitle)
                <div style="float:left; margin-left: 1em;">
                    @Html.HiddenFor(m => m.Date)
                    @Html.LabelForModel(Model.Date)
                </div>
                <div class="Editor-Name">
                    <b>Filled by:</b>
                     @Html.TextBoxFor(m => m.Editor_Name)
                </div>
                <div class="DynamicFormContainer"></div>
            </div>
        </div>
        <div></div>
        <div style="float:left;">
            <input type="submit" value="Save" id="Save" />
            <input type="button" value="Cancel" />
        </div>
    }
    <span class="status-label" style="float:right">@ViewBag.StatusLbl</span>
</body>
</html>
